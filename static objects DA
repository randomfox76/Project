#include <graphics.h>

int main()
{
    int gd = DETECT, gm;
    initgraph(&gd, &gm, "");

     setbkcolor(0);
        cleardevice(); // Clear the screen before drawing each frame

        // Draw human
        setcolor(YELLOW);
        circle(80 , 300, 10);

        line(80  , 310, 80  , 340);
        line(80  , 325, 65  , 315);
        line(80 , 325, 95  , 315);
        line(80 , 340, 65  , 355);
        line(80  , 340, 95  , 355);
        setcolor(7);
        line(0,355,2000,355);

        // Draw bird
        setcolor(9);


        int x = 220 ;
        int y = 75 ;
        int start_angle = 30;
        int end_angle = 90;
        int radius = 30;
        arc(x, y, start_angle, end_angle, radius);

        int x1 = 270;
        int y1 = 75 ;
        int sta1 = 90;
        int eda1 = 150;
        int r1 = 30;
        arc(x1, y1, sta1, eda1, r1);

     // Draw house
        setcolor(RED);
        //base
        line(30 , 200, 110 , 200);
        line(30 , 200, 30 , 100);
        line(30 , 100, 110 , 100);
        line(110 , 200, 110, 100);

       int basepoints[]={30,200,110,200,110,100,30,100};
       setfillstyle(SOLID_FILL,7);
        fillpoly(4, basepoints);
        //door
        line(60, 200, 60 , 160);
        line(60 , 160, 80 , 160);
        line(80 , 160, 80 , 200);
        int doorpoints[]={60,200,60,160,80,160,80,200};
       setfillstyle(SOLID_FILL,10);
        fillpoly(4, doorpoints);

         //top
        line(30 , 100, 70 , 70);
        line(70 , 70, 110 , 100);
        line(30 , 100, 110 , 100);
        int toppoints[]={30,100,70,70,110,100};
        setfillstyle(SOLID_FILL,14);
         fillpoly(3, toppoints);

        //roof
        line(70,70,170,70);
        line(170,70,210,100);
        line(110,100,210,100);

        int roofpoints[]={70,70,170,70,210,100,110,100};
        setfillstyle(SOLID_FILL, RED);
         fillpoly(4, roofpoints);
        //side
        line(110,100,210,100);
        line(210,100,210,200);
        line(210,200,110,200);

       int sidepoints[]={110,100,210,100,210,200,110,200};
       setfillstyle(SOLID_FILL,9);
        fillpoly(4, sidepoints);
        // Draw mountains
        setcolor(GREEN);
        line(340 , 200, 400, 80);
        line(400 , 80, 460, 200);
        line(430 , 140, 460 , 80);
        line(460 , 80, 520 , 200);
        line(490, 140, 520, 80);
        line(520 , 80, 580 , 200);
        line(340 , 200, 580, 200);

       int m1points[]={340,200,400,80,460,200};
       setfillstyle(SOLID_FILL,6);
        fillpoly(3, m1points);

       int m2points[]={430,140,460,80,520,200,460,200};
       setfillstyle(SOLID_FILL,6);
        fillpoly(4, m2points);

        int m3points[]={490,140,520,80,580,200,520,200};
       setfillstyle(SOLID_FILL,6);
        fillpoly(4, m3points);

    getch();
    closegraph();
    return 0;
}

